<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

    <style>
        #formdiv{
            background: linear-gradient(to left, #ab68ca, #de67a3); ;
            display:flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
           
            
        }
        form{
            width: 70vw;
            max-width:450px;
            border: 1px solid white;
            background-color: whitesmoke;
            height:400px;
            border-radius: 16px;
            padding:20px 20px;
            text-align: center;
        }
        h1{
    
            color:rgb(65, 64, 64);
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 38px;
        }
        input {
            margin-top: 30px;
            height: 40px;
            width: 70vw;
            max-width: 300px;
            border-radius: 2px;
            border: none;
            background-color: rgb(230, 230, 230);
            opacity: 0.6;
            outline: none;
            color: black;
            padding-left: 10px;
        }
        input:hover{
            background-color: rgb(173, 173, 173);
        }
    
        input[type=text] {
            margin-top: 60px;
        }
        #label{
            font-size: 20px;
            font-weight: 20px;
            color: #696a86;
        }
        #submit{
            margin-top: 120px;
            margin-top: 60px;
            height: 40px;
            width: 140px;
            outline: none;
            background: #fff;
            border: 1px solid black;
            border-radius: 2px;
            color: #3a3b53;
            font-size: 19px;
            border-radius: 12px;
        }
        #submit:hover{
            color:white;
            background-color: rgb(47, 47, 47);
            
        }
        #resetlink{
            margin-top:50px;
            font-size: 1.5rem;
            color:rgb(250, 98, 128)
        }
    </style>
    <body>
        <div id ="formdiv">
    <form>
        <h1>Reset Password</h1>
        <label for="Password" id="label">Enter New Password:</label>
        <input id="password" type="password" name="password" placeholder="Password">
        <button id="submit" onClick ="submit">Submit</button> 
        <div id = "resetlink"></div>
    </form>
    </div>
    
</body>
<script>
    
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const resetLink = document.getElementById('resetlink')
    form.addEventListener('submit',async(e)=>{
        e.preventDefault();
        const passwordvalue = password.value;
        const res = await fetch('/reset',{
            method:'post',
            body:JSON.stringify({password:passwordvalue,token:`<%= token %>`}),
            headers:{'Content-type':'application/json'}
        })
        const data = await res.json()
        console.log(data);
        if(data.message)
        {
            console.log('check email'+data.message);
            resetLink.innerText=`${data.message}`;
            setTimeout(() => {
                location.assign('/login')
            }, 1000);

        }
        if(data.error){
            console.log('check email'+data.error)
            resetLink.innerText=`${data.error}`
        }
        
        
    })
</script>
</html>